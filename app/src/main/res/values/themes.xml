<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AirTickets" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/orange</item>

        <item name="android:colorBackground">@color/black_variant</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_5</item>

        <item name="android:statusBarColor">@color/grey_5</item>
        <item name="android:navigationBarColor">@color/grey_5</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#4CB24E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:backgroundTint">@color/grey_7</item>
        <item name="android:textColor">@color/grey_2</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="colorSurface">@color/grey_5</item>
        <item name="colorOnSurface">@color/blue</item>
        <item name="colorOnSurfaceVariant">@color/grey_5</item>
        <item name="colorOnSecondary">@color/orange</item>
        <item name="colorOnSecondaryContainer">@color/blue</item>
    </style>

    <style name="TextAppearance.Title1" parent="" >
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Title2" parent="" >
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Title3" parent="" >
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Title4" parent="" >
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Text1" parent="" >
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Text2" parent="" >
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.ButtonText" parent="" >
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.AirTickets" parent="Base.Theme.AirTickets" />
</resources>